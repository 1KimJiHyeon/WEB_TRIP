extends ../layout

block content
  .container
    h1.main-title= post.field

    .container
        .row
          .col-2="여행지"
        .row
          .col-10=post.title
          hr

        // 추가 정보 
        .row
          .col-2="제목"
        .row
          .col-10=post.field
          hr

        .row
          .col-2="인원"
        
        table.table
          tr
            td
              .col-4="가격"
              span#price=post.applicant
            td
              input#no(type='number')
            td
              span#result
          
          
          // 아래부터 자바스크립트
          script(type='text/javascript').
            $(function() {
              $('#no').keyup(function() {
                var numPeople = parseInt($("#no").val());
                var price = parseInt($("#price").text());
                $("#result").text(numPeople * price);
              });
            });


          
        .row
          #fb-root
            script(async='', defer='', crossorigin='anonymous', src='https://connect.facebook.net/ko_KR/sdk.js#xfbml=1&version=v5.0')
          .fb-share-button(data-href='https://developers.facebook.com/docs/plugins/', data-layout='button_count', data-size='small')
            a.fb-xfbml-parse-ignore(target='_blank', href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&src=sdkpreparse') &#xACF5;&#xC720;&#xD558;&#xAE30;

                  
        
          



         
         
        hr
        .row
          .col-2="설명"
        .row
          .col-10=post.content
          hr
        .row
          .col-2="여행 코스"
        .row
          .col-10= "1일차 "+post.period
          .col-10="2일차 "+post.tel
          .col-10="3일차 "+post.sponser
          
        .row
          iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12666.003881493406!2d126.43137978475859!3d37.47250282546333!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x357b9a833a5efa59%3A0x8d4ba096cb5cbed4!2z7J247LKc6rWt7KCc6rO17ZWt!5e0!3m2!1sko!2skr!4v1575290485267!5m2!1sko!2skr', width='400', height='300', frameborder='0', style='border:0;', allowfullscreen='')



        

    // 이미지 보여주기 
    .post.show
      if post.img
        img.img-fluid(src=post.img)
      include _post


      .buttons
        if currentUser
        
        
          button.btn.btn-primary.post-like-btn(data-id=post.id)  좋아요
          
          | 
          a.btn.btn-outline-secondary(href=`/posts/${post.id}/edit`) 수정
          | 
          a.btn.btn-outline-danger.delete-btn(href="#", data-url=`/posts/${post.id}?_method=delete`) 삭제
      
    if post.numAnswers > 0
      hr
      h3 #{post.numAnswers} Answer(s)
      .answers.show
        each answer in answers
          include _answer

    if currentUser
      form(action=`/posts/${post.id}/answers`, method='POST')
        .form-group
          label(for='answer') Your Comment
          textarea.form-control(name="content", rows="5")
        button.btn.btn-primary(type="submit") Post Your Comment


  script(src='/javascripts/post_client.js')




  