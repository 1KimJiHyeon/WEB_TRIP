extends ../layout

block content
  .container
  
    h1.main-title= user.name
      button.btn.btn-outline-primary(type="submit") 위시리스트
      button.btn.btn-outline-primary(type="submit") 예약내역
          
    dl.row

      
      dt.col-sm-3 Introduce
      dd.col-sm-9= user.introduce

      dt.col-sm-3 Email
      dd.col-sm-9
        a(href=`mailto:${user.email}`)= user.email

      dt.col-sm-3 Tel
      dd.col-sm-9= user.tel
      
      dt.col-sm-3 userMode
      dd.col-sm-9= user.userMode

      dt.col-sm-3 Created At
      dd.col-sm-9= user.createdAt

      

      

      
      
      if user.facebook.id
        dt.col-sm-3 Facebook
        dd.col-sm-9
          img.img-fluid.rounded-circle(src= user.facebook.photo)

    hr
    p
      
      a.btn.btn-outline-primary(href=`/users/${user._id}/edit`) 회원정보 수정
      | 
      a.btn.btn-outline-danger.need-confirm-btn(href=`/users/${user._id}?_method=DELETE`) 회원 탈퇴
